{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Snippet",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "enum": [
        "code",
        "criteria",
        "notes"
      ]
    },
    "language": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "title",
    "body"
  ],
  "additionalProperties": true
}